// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model StaffMember {
    id              String   @id @default(cuid())
    order           Int      @default(autoincrement())
    slug            String?
    name            String
    role            String
    qualifications  String
    imageUrl        String
    bio             String[]
    philosophy      String?
    education       String?
    specializations String[]
}
